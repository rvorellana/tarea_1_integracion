
<div class = "container" style = "margin-top:2rem;">
  <div class = "row justify-content-center">
  <div class="col-2">
  </div>
  <div class="col-8">
  <h1 class="card-title white_text">Search results for: <%= @name%></h1>
  </div>
  <div class="col-2">
  </div>
    <% if @characters_info.empty? %>
  <div class="col-2">
  </div>
  <div class="col-8">
    <div class="card card_bad_color char_card" style="width: 100%;">
      <div class="card-body">
        <h2 class="card-title white_text">No Results</h2>
      </div>
    </div>
  </div>
  <div class="col-2">
  </div>
    <% else %>
      <%@characters_info.each do |character|%>
        <div class= "col-2">
        </div>
        <div class = "col-8">
          <div class="card card_bad_color char_card" style="width: 100%;">
            <div class="card-body">
              <h5 class="card-title white_text"><%= character["name"]%></h5>
              <hr class="card-title title">
              <p class="card-tex white_text">AKA: <%= character["nickname"]%></p>
              <% character_name = character["name"].tr('.', '')%>
              <a href=<%= character_path(character_name)%> class="btn btn-light">See character</a>
            </div>
          </div>
        </div>
        <div class= "col-2">
        </div>
      <% end %>
    <% end %>
  </div>
</div>

